import time as t
import Xbee


#open Xbee object


device_location ='/dev/ttyAMA0'
baudrate = '9600'
xbee_obj = Xbee.Setup(device_location,baudrate)


#Broadcast a request to the immediate cluster for data.
msg = 'Hey'
address = 0x00FF
options = 0x00
frame_id = 0x00

result = xbee.SendTransmitRequest(msg,address,frame_id,options,1)
